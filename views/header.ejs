							<%})%>
						</ul>
					</li>
				<% } %>
					<li><a href="/postar">Cadastrar</a></li>
					<li class="active dropdown">
						<a href="#" class="dropdown-toggle" data-toggle="dropdown"><%- sess.user.name %> <b class="caret"></b></a>
						<ul class="dropdown-menu">
							<li><a href="/user/<%-sess.user._id%>">Perfil</a></li>
							<li class="divider"></li>
							<li><a href="/logout">Sair</a></li>
						</ul>
					</li>
				<%} else {%>
					<li><a href="/entrar">Login</a></li>
				<% } %>
			</ul>
