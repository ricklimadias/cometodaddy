<% include ../header %>
	<% include ../helpers/search_form %>
	<% if (messages.success) { %>
		<div class="alert alert-success">
			<span><%- messages.success %></span>
		</div>
	<% } %>
	<% if (messages.error) { %>
		<div class="alert alert-danger">
			<span><%- messages.error %></span>
		</div>
	<% } %>


	<div class="jumbotron">
		<h1>Go To Daddy</h1>
		<p class="lead">Sistema de Buscas Para PET's, foi desenvolvido usando Node.JS, MongoDB, EJS, Twtitter Bootstrap.</p>
		<p><a class="btn btn-lg btn-success" href="/postar" role="button">Cadastrar Pet</a></p>
	</div>

	<div class="row marketing">
       
        <div class="col-lg-12">
	        <% if (posts.length) {%>
	        	<% posts.forEach(function(post, index) { %>
	        		<article>
						<h4><a href="/post/<%-post._id%>"><%- post.title %></a></h4>
						<p><%- post.body %></p><br>
						
						<div class="row">
							<div class="col-lg-12">
								<p>
									<strong>Encontrado: <%- post.comments[2].finded %> | Data: </strong><%=: post.createdAt | formatDate %> |
									<strong><%- post.comments.length %> Coment√°rios</strong> |
									<% if (post.tags){ %>
										<strong>Tags:</strong>
										<% post.tags.split(',').forEach(function(tag) { %>
											<a href="/tags/<%-tag%>"><span class="label label-info"><%- tag %></span></a>
										<% }) %>
									<% } %>
								</p>
							</div>
						</div>
					</article>
					<div class="row">
						<hr />
					</div>
				<% }) %>
			<% }else{ %>
				<h2>Nenhum pet encontrado</h2>
			<% } %>
        </div>
      </div>

<% include ../footer %>