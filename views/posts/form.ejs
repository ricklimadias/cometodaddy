<div class="row marketing">
	<h3><%- title %></h3>
	<div class="col-lg-12">
		<% if (post.isNew) {%>
			<form action="/post" method="post">
		<% } else{ %>
			<form action="/post/<%-post._id%>" method="post">
			<input type="hidden" name="_method" value="PUT">
		<% }%>

			<div class="control-group">
				<label for="post[title]">Titulo</label>
				<input type="text" value="<%-post.title%>" class="form-control" name="post[title]" id="title" placeholder="Escreve um titulo" required >
			</div>
			<br>
			<div class="control-group">
				<label for="post[body]">Conte√∫do</label>
				<textarea rows="5" class="form-control" value="<%-post.body%>" name="post[body]" id="body" required><%-post.body%></textarea>
			</div>
			<br>
			<div class="control-group">
				<label for="post[tags]">Tags</label>
				<input type="text" value="<%-post.tags%>" class="form-control" name="post[tags]" id="tags" placeholder="Tags">
			</div>
			<br>
			<button class="btn btn-lg btn-primary btn-block" type="submit">Salvar</button>
		</form>
	</div>
</div>